{
  "manifest_version": 2,
  "version": "0.0.2",
  "name": "ZeTalk",
  "short_name": "ZeTalk",  
  "description": "ZetaPush Realtime Collaboration",
  "default_locale": "en",
  "launch_path": "/",
  "start_url": "/",
  "icons": [  
    {
      "src": "assets/android-chrome-192x192.png",
      "sizes": "192x192",
      "type": "image\/png"
    },  
    {  
      "src": "assets/zetapush_logo.png",  
      "sizes": "256x256",  
      "type": "image/png"  
    },  
    {  
      "src": "assets/zetapush_logo.png",  
      "sizes": "384x384",  
      "type": "image/png"  
    },  
    {  
      "src": "assets/zetapush_logo.png",  
      "sizes": "512x512",  
      "type": "image/png"  
    }
  ],
  "fullscreen": true,
  "background": {
    // Recommended
    "persistent": false
  },
  "chrome_ui_overrides": {
    "bookmarks_ui": {
      "remove_bookmark_shortcut": true,
      "remove_button": true
    }
  },  
  "background_color": "#F5F5F5",
  "theme_color": "#F5F5F5",
  "display": "standalone",  
  "orientation": "portrait" 
}